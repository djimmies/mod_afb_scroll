<?xml version="1.0" encoding="utf-8"?>
<extension 	type="module"	version="2.5"	client="site"	method="upgrade">
	<name>MOD_AFB_SCROLL</name>
	<author>Jim v Rijsewijk | Dayman Media</author>
	<creationDate>Feb 2014</creationDate>
	<copyright>Copyright (C) 2014. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later;</license>
	<authorEmail>jim@dayman.nl</authorEmail>
	<authorUrl>www.dayman.nl</authorUrl>
	<version>1.0.0</version>
	<description>MOD_AFB_SCROLL_XML_DESCRIPTION</description>
	<files>
		<filename module="mod_afb_scroll">mod_afb_scroll.php</filename>
		<folder>tmpl</folder>
		<folder>css</folder>
		<folder>js</folder>
		<folder>images</folder>
		<filename>index.html</filename>		
		<filename>mod_afb_scroll.xml</filename>
	</files>
	<languages>
		<language tag="nl-NL">language/nl-NL.mod_afb_scroll.ini</language>
		<language tag="nl-NL">language/nl-NL.mod_afb_scroll.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
				name="folder"
				type="text"
				default="images/"
				label="Afbeeldingen map"
				description="MOD_AFB_SCROLL_AFBEELDINGEN_DESCRIPTION" />
				</fieldset>
			<fieldset name="advanced">
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
				<field
					name="owncache"
					type="list"
					default="1"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC">
					<option value="1">JGLOBAL_USE_GLOBAL</option>
					<option	value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
